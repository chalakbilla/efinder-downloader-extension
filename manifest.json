{
    "manifest_version": 3,
    "name": "CORS-Free Downloader with Progress",
    "version": "1.1",
    "description": "Download files into folders with progress tracking.",
    "permissions": [
      "downloads",
      "activeTab",
      "scripting",
      "notifications"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  